{
  "buildCommand": "npm ci --prefer-offline --no-audit && chmod +x node_modules/.bin/* && npx vite build",
  "outputDirectory": "out",
  "installCommand": "npm ci --prefer-offline --no-audit",
  "framework": "vite",
  "nodeVersion": "18.x",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
